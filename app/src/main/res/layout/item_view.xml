<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardElevation="10dp"
    android:background="@color/colorItem"
    app:cardCornerRadius="8dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/colorItem"
       android:gravity="end">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="end">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_marginTop="16dp"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:id="@+id/publisher_name"
                   android:text="Osama"
                   android:textSize="36sp"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/publish_date"
                   android:text="16-10-2019"/>

           </LinearLayout>

           <androidx.cardview.widget.CardView
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:id="@+id/header_image_card_view"
               app:cardCornerRadius="50dp"
               android:layout_margin="16dp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/publisher_image"
               android:src="@drawable/osama_custom"
               android:scaleType="centerCrop"
               android:contentDescription="@string/header_description"/>
           </androidx.cardview.widget.CardView>

       </LinearLayout>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:id="@+id/item_image"
           android:contentDescription="@string/clothes"
           android:scaleType="centerCrop"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginRight="16dp"
           android:gravity="end">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/item_name"
               android:textSize="24sp"
               android:textStyle="bold" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/item_state"
               android:textSize="24sp"
               android:textStyle="bold" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/item_price"
               android:textSize="24sp"
               android:textStyle="normal"
               android:layout_gravity="bottom|right"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/item_description"
               android:gravity="right" />

       </LinearLayout>



   </LinearLayout>

</androidx.cardview.widget.CardView>