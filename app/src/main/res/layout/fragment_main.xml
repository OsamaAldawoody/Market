<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/gold_card"
            app:cardElevation="8dp"
            app:cardCornerRadius="6dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/gold_image"
                android:scaleType="centerCrop"
                android:src="@drawable/gold"
                android:layout_gravity="top"
                android:contentDescription="@string/clothes"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lands_card"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="6dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:id="@+id/lands_image"
                android:scaleType="centerCrop"
                android:src="@drawable/lands"
                android:layout_gravity="top"
                android:contentDescription="@string/clothes"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clothes_card"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/clothes_image"
            android:scaleType="centerCrop"
            android:src="@drawable/clothes"
            android:layout_gravity="top"
            android:contentDescription="@string/clothes"/>

    </androidx.cardview.widget.CardView>






</LinearLayout>